    print(result)


def getAddress():
    conn = db_connect.connect()
    sort = conn.execute("select name, Currency from InovClients ")
    result = {'data': [dict(zip(tuple(sort.keys()), i)) for i in sort.cursor]}
    print("Domestic currencies of clients:")
