from sqlalchemy import create_engine

db_connect = create_engine('sqlite:///data.db')


def getCountry():
    conn = db_connect.connect()
    sort = conn.execute("select name, Country from InovClients ")
    result = {'data': [dict(zip(tuple(sort.keys()), i)) for i in sort.cursor]}
    print("Clients Country of Residence")
    print(result)


def getPIN():
    conn = db_connect.connect()
    sort = conn.execute("select name, Pin from InovClients ")
    result = {'data': [dict(zip(tuple(sort.keys()), i)) for i in sort.cursor]}
    print("Pins of clients:")
    print(result)


def getDCL():
